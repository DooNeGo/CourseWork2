<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DefaultTextBox" TargetType="TextBox">
           <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
           <Setter Property="FontWeight" Value="Medium"/>
           <Setter Property="Foreground" Value="{StaticResource MainFontColor1}"/>
           <Setter Property="CaretBrush" Value="{StaticResource MainFontColor1}"/>
           <Setter Property="BorderBrush" Value="{StaticResource MainFontColor1}"/>
           <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
           <Setter Property="Height" Value="28"/>
           <Setter Property="VerticalContentAlignment" Value="Center"/>
           <Setter Property="Background" Value="Transparent"/>
           <Setter Property="Margin" Value="0 5 0 0"/>
           <Setter Property="Width" Value="200"></Setter>
           <Setter Property="SelectionBrush" Value="{StaticResource SelectionFontColor}"/>
           <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>