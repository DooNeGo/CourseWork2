<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="MainFont"> Montserrat </FontFamily>

    <ImageBrush x:Key="Watermark"
                ImageSource="/CourseWork2;component/Images/searchWatermark.png"
                Stretch="Uniform"
                AlignmentX="Left"
                AlignmentY="Bottom">
        <ImageBrush.Transform>
            <TransformGroup>
                <ScaleTransform ScaleX=".5"
                                ScaleY=".5"/>
                <TranslateTransform Y="5"/>
            </TransformGroup>
        </ImageBrush.Transform>
    </ImageBrush>
</ResourceDictionary>