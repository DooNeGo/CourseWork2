<Window x:Class="CourseWork2.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2.Views"
        xmlns:viewmodels="clr-namespace:CourseWork2.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="OnWindowMouseDown">
    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"
                        Stretch="Fill"/>
        </Border.Background>

        <Border CornerRadius="20"
                Opacity="0.95"
                Background="#0C5DA5"
                BorderBrush="#679FD2"
                BorderThickness="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOG IN"
                               Foreground="White"
                               FontSize="10"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10, 0 ,0 ,0"/>

                    <Button x:Name="minimizeButton"
                            BorderThickness="0"
                            Content="-"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="OnMinimizeButtonClick">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#679FD2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#408DD2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="22" Height="22"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="closeButton"
                            BorderThickness="0"
                            Content="X"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="OnCloseButtonClick">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFC573"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFB040"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="22" Height="22"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0, 35, 0, 0">
                    
                    <Image Source="/Images/logo-removebg.png"
                           Width="100" Height="100"/>

                    <TextBlock Text="STAFFY"
                               FontSize="26"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontWeight="Medium"/>

                    <TextBlock Text="Username"
                               FontSize="12"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               Margin="0, 35, 0, 0"/>

                    <TextBox x:Name="usernameTextBox"
                             FontSize="13"
                             FontFamily="Montserrat"
                             FontWeight="Medium"
                             Foreground="White"
                             CaretBrush="White"
                             BorderBrush="LightBlue"
                             SelectionBrush="LightBlue"
                             BorderThickness="0, 0, 0, 1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0, 5, 0, 0"
                             Padding="20, 0, 0, 0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.jpg"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                             
                    </TextBox>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
